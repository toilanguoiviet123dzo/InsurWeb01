<MudChip Style="width:120px"
         Variant="Variant.Filled"
         Icon="@IconCss"
         Color="@Color.Primary"
         OnClick="OnClickHandler">
    @Literal
</MudChip>

@code {
    [Parameter]
    public string Literal { get; set; } = "Click me";
    [Parameter]
    public string IconCss { get; set; } = "";
    [Parameter]
    public MudBlazor.Color ButtonColor { get; set; } = Color.Primary;
    [Parameter]
    public EventCallback OnClick { get; set; }

    private async void OnClickHandler()
    {
        await OnClick.InvokeAsync();
    }
}

