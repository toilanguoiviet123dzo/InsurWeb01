<MudExpansionPanel IsInitiallyExpanded="true" Dense="true" DisableGutters="true" Class="pb-2">
    <TitleContent>
        <h6 class="font-weight-bold">@Title</h6>
    </TitleContent>
    <ChildContent>
        @ChildContent
    </ChildContent>
</MudExpansionPanel>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public RenderFragment ChildContent { get; set; }
}
