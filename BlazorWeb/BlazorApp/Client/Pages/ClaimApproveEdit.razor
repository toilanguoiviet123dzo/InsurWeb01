                    <!--Ngày tiếp nhận-->
                    <div class="col-12 col-lg-3">
                        <MyDateTimeEdit @bind-Date="Model.ClaimDate"
                                        Literal="Ngày tiếp nhận"
                                        ReadOnly="true"
