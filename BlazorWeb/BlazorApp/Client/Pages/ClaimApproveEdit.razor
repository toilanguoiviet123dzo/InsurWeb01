                    </div>
                    <!--Số CMND/CCCD-->
                    <div class="col-12 col-lg-3">
                        <MyTextEdit @bind-Text="Model.CusCardID"
                                    ReadOnly="true"
                                    Literal="Số CMND/CCCD" />
                    </div>
                </div>

                <!--Row 3-------------------------------------------------->
