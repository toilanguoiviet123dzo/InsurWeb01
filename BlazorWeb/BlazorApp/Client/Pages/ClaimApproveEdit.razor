<MyForm Title="Yêu cầu bồi thường"
        ReadOnly="@ReadOnly"
        OnCancelClick="CloseMain"
        OnSubmitClick="SaveMain">
    <MyPanels>
        <!--Thông tin chung-->
        <MyPanel Title="Thông tin chung">
            <div class="container-fluid">
                <!--Row 1-------------------------------------------------->
                <div class="row">
                    <!--Số tiếp nhận-->
                    <div class="col-12 col-lg-3">
                        <MyTextEdit @bind-Text="Model.ClaimNo"
