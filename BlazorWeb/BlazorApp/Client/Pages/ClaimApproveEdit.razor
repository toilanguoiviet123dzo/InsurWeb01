                    </div>
                    <!--Người tiếp nhận-->
                    <div class="col-12 col-lg-3">
                        <MyTextEdit @bind-Text="Model.ClaimAccountName"
                                    ReadOnly="true"
                                    Literal="Người tiếp nhận" />
                    </div>
                </div>

                <!--Row 2-------------------------------------------------->
