
<button @ref="Ref" class="btn btn-primary" style="width:9rem; height:2rem; vertical-align:middle; margin-left:10px; margin-right:10px; padding:0" @onclick="@OnClickHandler">
    <div style="text-align:center">
        <i class="fas fa-floppy-o" style="font-size:x-large; margin-right: 20px; display:inline-block;vertical-align:middle" aria-hidden="true"></i>
        <span style="font-size: medium; display:inline-block; vertical-align: middle" aria-hidden="true">@Text</span>
    </div>
</button>

@code {
    [Parameter]
    public ElementReference Ref { get; set; }
    [Parameter]
    public string Text { get; set; } = "Save";
    [Parameter]
    public EventCallback OnClick { get; set; }

    private async void OnClickHandler()
    {
        await OnClick.InvokeAsync();
    }

}
